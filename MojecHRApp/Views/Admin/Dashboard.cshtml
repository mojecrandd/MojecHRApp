
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminTemplate.cshtml";
}


<div class="col-lg-12" role="main">

    <div class="page-title">
        <div class="title_left">
            <h3>Dashboard</h3>
        </div>
    </div>
    <div class="x_panel">
        <div class="x_title">
            <h2 style="color:black">Dashboard</h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                    </div>
                </div>
            </div>
            <div class="col-lg-12">

                <div class="row">
                    <div class="col-lg-3">
                        <div class="tile-stats">
                            <div style="color:black" class="icon"><i class="fas fa-users"></i></div>
                            <div style="color:black" class="count">@ViewBag.TotalStaff</div>
                            <h3 style="color:black">Staff</h3>
                            <p style="color:black">Total Registered Employees.</p>
                        </div>
                    </div>
                    
                 
                    
                </div>
            </div>



        </div>
    </div>

    

</div>




@section Scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function () {
            var save = '@TempData["save"]'
            if (save != null) {
                alertify.success(save);
            }
            var edit = '@TempData["edit"]'
            if (edit != '') {
                alertify.success(edit);
            }
            var del = '@TempData["delete"]'
            if (del != '') {
                alertify.error(del);
            }
        })
    </script>
        }

