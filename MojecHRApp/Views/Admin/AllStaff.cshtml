@using MojecHRApp.Models;
@model IEnumerable<LoginTbl>
@{
    ViewData["Title"] = "AllStaff";
    Layout = "~/Views/Shared/_AdminTemplate.cshtml";
}



<div class="col-lg-12" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Staffs</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Staffs</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" id="datatable">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Fullname)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Username)
                                        </th>
                                        <th></th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Fullname)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Username)
                                            </td>
                                            <td style="width:150px">
                                                <div class="btn-group">
                                                    <a asp-action="GetStaffDetails"   asp-controller="Admin" class="btn btn-primary" asp-route-Id="@item.Username">Details</a>
                                                    <a asp-action="GetStaffFiles" asp-controller="Admin" class="btn btn-success" asp-route-Id="@item.Username">Documents</a>
                                                    <a asp-action="GetStaffExperience" asp-controller="Admin" class="btn btn-primary" asp-route-Id="@item.Username">Experience</a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function () {
            var save = '@TempData["save"]'
            if (save != null) {
                alertify.success(save);
            }
            var edit = '@TempData["edit"]'
            if (edit != '') {
                alertify.success(edit);
            }
            var del = '@TempData["delete"]'
            if (del != '') {
                alertify.error(del);
            }
        })
    </script>
        }