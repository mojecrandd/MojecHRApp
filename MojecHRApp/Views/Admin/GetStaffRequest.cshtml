@using MojecHRApp.Models;
@model IEnumerable<LeaveRequest>
@{
    ViewData["Title"] = "GetStaffRequest";
    Layout = "~/Views/Shared/_AdminTemplate.cshtml";
}

<div class="col-lg-12" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Leave Request</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Request</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" id="datatable">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Reason)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.LeaveDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ReturnDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Status)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Reason)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LeaveDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ReturnDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Status)
                                            </td>
                                            <td style="width:150px">
                                                <div class="btn-group">
                                                    <a asp-action="GetStaffRequestDetails" asp-controller="Admin" class="btn btn-primary" asp-route-id="@item.Email">View</a>
                                                    <a asp-action="AcceptLeave" asp-controller="Admin" class="btn btn-primary" asp-route-id="@item.Email">Accept</a>
                                                    <a asp-action="DeclineLeave" asp-controller="Admin" class="btn btn-danger" asp-route-id="@item.Email">Decline</a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



