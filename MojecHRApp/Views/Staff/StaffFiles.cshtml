@using MojecHRApp.Models
@model IEnumerable<Files>
@{
    ViewData["Title"] = "StaffFiles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-lg-12" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Staff Files</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Files</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <p>
                                        <a asp-controller="Staff" asp-action="UploadFile" class="btn btn-success btn-sm">Upload Document</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" id="datatable">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FileType)
                                        </th>
                                        <th></th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FileType)
                                            </td>
                                            <td style="width:150px">
                                                <div class="btn-group">
                                                    <a asp-action="DeleteFiles" asp-controller="Staff" class="btn btn-danger" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i> Delete</a>
                                                    <a asp-action="DownloadFiles" asp-controller="Staff" class="btn btn-primary" asp-route-id="@item.Id"><i class="fas fa-arrow-circle-down"></i> Download</a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function () {
            var save = '@TempData["save"]'
            if (save != null) {
                alertify.success(save);
            }
            var edit = '@TempData["edit"]'
            if (edit != '') {
                alertify.success(edit);
            }
            var del = '@TempData["delete"]'
            if (del != '') {
                alertify.error(del);
            }
        })
    </script>
        }
