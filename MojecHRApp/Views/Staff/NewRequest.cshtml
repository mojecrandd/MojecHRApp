@model MojecHRApp.Models.LeaveRequest
@{
    ViewData["Title"] = "NewRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Leave Request</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>New Request</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <form asp-controller="Staff" asp-action="NewRequest" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="Reason" class="control-label"></label>
                                        <textarea asp-for="Reason" class="form-control"></textarea>
                                        <span asp-validation-for="Reason" class="text-danger"></span>
                                    </div>
                                </div>
                                
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="LeaveDate" class="control-label"></label>
                                        <input type="date" asp-for="LeaveDate" class="form-control" required />
                                        <span asp-validation-for="LeaveDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="ReturnDate" class="control-label"></label>
                                        <input type="date" asp-for="ReturnDate" class="form-control" />
                                        <span asp-validation-for="ReturnDate" class="text-danger"></span>
                                    </div>
                                </div>
                              
                            </div>
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <button type="submit" class="btn btn-success">Save</button>
                                    <a asp-action="LeaveRequest" class="btn btn-primary">Back to list</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

